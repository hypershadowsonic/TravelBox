<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edge.work.travelbox.AwardFragment"
    android:background="#B5F4EA">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/award_anim_pt2"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/award_anim_bg2"
            android:src="@mipmap/award_anim_bg2" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/award_anim_property"
            android:layout_alignBottom="@+id/award_anim_light"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:src="@mipmap/land_element_wbase"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/award_anim_light"
            android:layout_marginBottom="189dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/award_anim_light"
            android:visibility="gone" />

        <TextView
            android:text="GET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:textSize="72sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#7AC0D3" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/award_anim_pt1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/award_anim_bg1"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/award_anim_bg1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:layout_marginStart="105dp"
            android:layout_marginTop="132dp"
            android:id="@+id/award_anim_box"
            android:layout_alignTop="@+id/award_anim_bg1"
            android:layout_alignLeft="@+id/award_anim_bg1"
            android:layout_alignStart="@+id/award_anim_bg1"
            android:src="@mipmap/award_anim_package" />
    </RelativeLayout>
</FrameLayout>
