    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.edge.work.travelbox.MyislandShopFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/shop_counter_bar"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="360"
                    android:progress="196"
                    android:scaleY="10" />

                <TextView
                    android:id="@+id/shop_chouter_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:text="6:00" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:id="@+id/shop_dec_1"
                    android:layout_width="104dp"
                    android:layout_height="168dp"
                    android:layout_margin="12dp"
                    android:elevation="2dp"
                    android:foreground="?android:attr/selectableItemBackground">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/shop_dec_1_img"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8dp"
                            app:srcCompat="@mipmap/list_box_01" />

                        <TextView
                            android:id="@+id/shop_dec_1_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="20dp"
                            android:text="price" />

                        <TextView
                            android:id="@+id/shop_dec_1_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/shop_dec_1_price"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="4dp"
                            android:text="Name" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/shop_dec_2"
                    android:layout_width="104dp"
                    android:layout_height="168dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="12dp"
                    android:elevation="2dp"
                    android:foreground="?android:attr/selectableItemBackground">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/shop_dec_2_img"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8dp"
                            app:srcCompat="@mipmap/list_box_01" />

                        <TextView
                            android:id="@+id/shop_dec_2_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="20dp"
                            android:text="price" />

                        <TextView
                            android:id="@+id/shop_dec_2_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/shop_dec_2_price"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="4dp"
                            android:text="Name" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/shop_dec_3"
                    android:layout_width="104dp"
                    android:layout_height="168dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="12dp"
                    android:elevation="2dp"
                    android:foreground="?android:attr/selectableItemBackground">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/shop_dec_3_img"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8dp"
                            app:srcCompat="@mipmap/list_box_01" />

                        <TextView
                            android:id="@+id/shop_dec_3_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="20dp"
                            android:text="price" />

                        <TextView
                            android:id="@+id/shop_dec_3_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/shop_dec_3_price"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="4dp"
                            android:text="Name" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>