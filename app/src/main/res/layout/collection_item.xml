<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="104dp" android:layout_height="168dp"
    android:id="@+id/collection_item">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <ImageView
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/collection_item_img"
            android:layout_width="80dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/collection_item_title"
            android:layout_below="@+id/collection_item_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/collection_item_price"
            android:layout_below="@+id/collection_item_title"
            android:layout_alignLeft="@+id/collection_item_title"
            android:layout_alignStart="@+id/collection_item_title"
            android:layout_marginTop="4dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>